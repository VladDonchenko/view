<div class="pt-5" style="text-align: left;">
  
  <h1 style="color: black;"><strong>Створити нове завдання</strong></h1>
<%= form_with(model: task) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :Категорія %>:</br>
    <%= form.select :category_id, options_from_collection_for_select(@subcategories, :id, :title)%>
  </div>
 
  <div class="field">
    <%= form.label :Заголовок %>:</br>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="field">
    <p>Опис завдання:</p> 
    <%= form.text_area :description, class: 'form-control', rows: "3" %>
  </div>
  <br>



  <div class="col-2">
  <div class="field">
    <p>Рrice:</p>
    <%= form.text_field :price, class: 'form-control', placeholder: "100" %></br></br>
  </div>

  <div class="actions">
      <%= form.submit "Створити завдання", class: 'btn btn-success' %></br></br>
    </div>


      <%= link_to 'Back', root_path ,{:style=>'color:#FFFFFF;text-decoration:none; text-align: center;', :class => "btn btn-success"}%>
</div>
<% end %>
</div>
<div style="height: 52px;">
</div> 
